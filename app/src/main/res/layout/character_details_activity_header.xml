<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/charBigScale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/charBigScaleTextSize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/compositionPartsPadding"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/charSmallScaleTextSize"/>

        <Space
            android:layout_width="@dimen/compositionPartsSpacing"
            android:layout_height="1px"/>

        <TextView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/charSmallScaleTextSize"/>
    </LinearLayout>

    <TextView
        android:id="@+id/compositionTypeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
