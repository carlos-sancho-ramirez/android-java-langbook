<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/firstLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/characterCompositionEditorFirstLabel"/>

        <EditText
            android:id="@+id/firstField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/firstLabel"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="text"/>

        <TextView
            android:id="@+id/secondLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/characterCompositionEditorSecondLabel"/>

        <EditText
            android:id="@+id/secondField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/secondLabel"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="text"/>

        <TextView
            android:id="@+id/compositionTypeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/characterCompositionEditorTypeLabel"/>

        <EditText
            android:id="@+id/compositionTypeField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/compositionTypeLabel"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="number"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/characterCompositionEditorSaveButtonText"/>
    </LinearLayout>
</ScrollView>
